<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.preksha.onlinelearning.Android">

    android:paddingLeft="10dp"
    android:background="#e4e1e1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objective :- "
        android:textColor="#0000ff"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The objectiveof this course is to teach android very easily."
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content :- "
        android:textColor="#0000ff"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Content of this course is to teach activity, link via intent, types of layout, storage process and its types..."/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cost :- "
            android:textColor="#0000ff"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000 /- Rs"
            android:textSize="20dp"
            android:id="@+id/rs"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_alignBottom="@id/cost"
            android:layout_toRightOf="@id/cost"
            android:layout_toEndOf="@id/cost" />
        <TextView
            android:id="@+id/disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cost"
            android:layout_marginTop="10dp"
            android:text="Discount :- "
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_toEndOf="@id/disc"
            android:layout_toRightOf="@id/disc"
            android:textSize="20dp"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_alignBottom="@id/disc"
            />
    </RelativeLayout>
</LinearLayout>
